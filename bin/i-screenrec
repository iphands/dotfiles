#!/bin/bash
STAMP=`date +%s`
BASE="${HOME}/Videos"
FILE="${BASE}/${STAMP}.mkv"
mkdir -p "$BASE"
touch $FILE
wf-recorder -g "$(slurp)" -yf ~/Videos/recording.mkv

