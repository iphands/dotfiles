#!/bin/bash
set -e

current="$HOME/.dotfiles_backup/`date +%Y%m%d%H%M%S`"
mkdir -p "$current"

host=unknown
[[ "$HOSTNAME" =~ "PC2K41CN" ]] && host=handslap
[[ "$HOSTNAME" =~ "PF5KC9XD" ]] && host=handslap
[[ "$HOSTNAME" =~ "cosmo" ]] && host=cosmo
[[ "$HOSTNAME" =~ "station" ]] && host=station
[[ "$HOSTNAME" == "ahands.org" ]] && host=ahands

echo
echo "## Found host: $host"

install_scripts() {
  p=$1
  echo
  echo "## $p scripts"
  mkdir -p ~/$p
  pushd ./$p >/dev/null
  for var in *
  do
    echo "-- installing ~/$p/$var"
    ln -sf $PWD/$var ~/$p/
  done
  popd >/dev/null
}

install_host() {
  git_target=$1
  target=$2
  [[ "$host" == "unknown" ]] && return 0
  [[ -d host/$host/$git_target ]] || return 0

  pushd host/$host/$git_target >/dev/null
  mkdir -p $target
  for var in *
  do
    echo "-- installing $target/$var"
    ln -nfs $PWD/$var $target/$var
  done
  popd >/dev/null
}

install_systemd() {
  pushd systemd-user
  target=".config/systemd/user"
  mkdir -p "${HOME}/$target"
  for var in *
  do
    echo "-- installing ~/$target/$var"
    ln -nfs $PWD/$var ~/$target/$var
  done
  popd
}

echo "## Dotfiles"
for var in ".Xdefaults"\
  ".alacritty.toml" \
  ".bash_profile" \
  ".bashrc" \
  ".emacs" \
  ".emacs.d" \
  ".gitconfig" \
  ".gitconfig-meta" \
  ".gitignore" \
  ".tmux.conf" \
  ".tmux.conf.local"
do
  echo "-- installing $var"
  if [[ -f ~/${var} ]]
  then
    cp -HR ~/${var} "$current"
  fi
  ln -sf "$PWD/${var}" ~/
done

install_scripts bin

if [ "$EUID" -eq 0 ]
then
  install_scripts sbin
fi

echo
echo "## Host specific"
install_host fluxbox "${HOME}/.fluxbox"
install_host labwc   "${HOME}/.config/labwc"
install_host waybar  "${HOME}/.config/waybar"
install_host fail2ban/jail    /etc/fail2ban/jail.d
install_host fail2ban/filter /etc/fail2ban/filter.d

echo
echo "## Install sytemd"
install_systemd

echo
echo "## Install themes"
rm -rf ~/.themes 2>&1 >/dev/null || true
ln -vnfs "${PWD}/themes" ~/.themes

# if [ ! -f /etc/profile.d/git-prompt.sh ]
# then
#   echo "# ln -s /usr/share/git-core/contrib/completion/git-prompt.sh  /etc/profile.d/"
# fi
